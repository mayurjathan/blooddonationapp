<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:fillViewport="true"> <!-- This is the key to vertical centering -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- App Logo or Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_blood_drop"
            android:contentDescription="iCare Logo"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iCare"
            android:textColor="#D32F2F"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate Blood, Save Lives"
            android:textColor="#757575"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Guest Button -->
        <Button
            android:id="@+id/btn_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue as Guest"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/holo_red_dark" />

        <!-- Hospital Login Button -->
<!--        <Button-->
<!--            android:id="@+id/btn_hospital"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Hospital"-->
<!--            android:backgroundTint="@android:color/holo_red_dark"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:padding="16dp" />-->

        <!-- Registered User Button -->
        <Button
            android:id="@+id/btn_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login as Registered User"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:backgroundTint="@android:color/holo_red_dark" />

    </LinearLayout>
</ScrollView>
